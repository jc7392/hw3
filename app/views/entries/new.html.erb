<div class="container mt-3">
  <h1> New Post </h1>
  <%= form_with model: @entry do |form| %>
    <%= form.hidden_field :place_id, value: @place_id %>
    <% @entry.errors.full_messages_for(:place_id).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @entry.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :description %><br>
      <%= form.text_field :description %>
      <% @entry.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :posted_on %><br>
      <%= form.date_field :posted_on %>
      <% @entry.errors.full_messages_for(:posted_on).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="actions">
        <%= form.submit "Create Post", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>